#!/bin/bash
set -eo pipefail

basedir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd .. && pwd )"

. "$basedir/lib/shared.bash"
. "$basedir/lib/diff.bash"
. "$basedir/lib/watch.bash"
. "$basedir/lib/trigger.bash"

echo "--- :one: monorepo-diff" ;

pipeline_yml=();
pipelines_to_trigger=();

diff=$(run_diff)
populate_pipelines_to_trigger "$diff"

if [ "${#pipelines_to_trigger[@]}" -eq 0 ]; then
  echo "No changes detected"
else
  generate_pipeline_yml
  output=$(printf '%s\n' "${pipeline_yml[@]}")

  if [[ -n ${DEBUG:-} ]] ; then
    echo >&2 "$output"
  fi

  NO_INTERPOLATION=""
  if [ "${BUILDKITE_PLUGIN_MONOREPO_DIFF_INTERPOLATION-}" = "false" ]; then
    NO_INTERPOLATION="--no-interpolation"
  fi

  echo "$output" | buildkite-agent pipeline upload ${NO_INTERPOLATION}
fi
